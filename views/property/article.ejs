<h1><%= foundProperty.name %></h1>
<h2><%= foundProperty.year %></h2>
<p>
  <%= foundProperty.message %>
</p>

<form action="/property/<%=foundProperty.id%>" method="post" id="commentform">
<div id="comment-name" class="form-row">
  <input type = "text" placeholder = "Name (required)" name = "commenterName"  id = "name" >
</div>
<div id="comment-message" class="form-row">
  <textarea name = "remarks" placeholder = "Message" id = "comment" ></textarea>
</div>
<input type="submit" name="submit" id="commentSubmit" value="Submit Comment">


</form>

<ul id="all-comment-boxes">
      <% commentArr.forEach(function(comments) { %>
        <div class="four columns">
           <li>
            <h2> <%= comments.commenterName %> </h2>
            <p> <%= comments.remarks %> </p>
            <p> <%= comments.propertyid %> </p>
            <a class="btn btn-default" href="/property/<%= foundProperty.id%>/edit" role="button">Edit</a>

          </li>
       </div>
         <% }) %>
     </ul>








<h2>New User sign up</h2>

<% if(message.length > 0) { %>
  <h3>Flash Found</h3>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<form class="new-user-passport" action="/signup" method="post">
  <div class="row">
    <div class="four columns">
      <input type="username" name="user[local][name]" id="user-name" placeholder="Your name" class="u-full-width">
    </div>
    <div class="four columns">
      <input type="email" name="user[local][email]" id="user-email" placeholder="Your user email" class="u-full-width">
    </div>
    <div class="four columns">
      <input type="password" name="user[local][password]" id="user-password" placeholder="Your user password" class="u-full-width">
    </div>
    <input type="submit" value='Save My User'>
  </div>

  <ul id="all-user-list">
  <% allUsers.forEach(function(user) { %>
    <li>
        <%= user.local.name %><br>
        <%= user.local.email %><br>
        <%= user.local.password %>
    </li>
  <% }) %>
  </ul>
</form>

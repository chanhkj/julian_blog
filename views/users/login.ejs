<h1>Login here</h1>

<% if(message.length > 0) { %>
  <h2>FLASH FOUND</h2>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<form class="login-user" action="/login" method="post">
  <div class="row">
    <div class="six columns">
      <input type="email" name="user[local][email]" placeholder="Your email" class="u-full-width">
    </div>
    <div class="six columns">
      <input type="password" name="user[local][password]" placeholder="Your password" class="u-full-width">
    </div>
    <input type="submit" value="Log in">
  </div>
</form>
